<idea-plugin>
    <id>droidcon.droidcon</id>
    <name>Droidcon London 18</name>
    <vendor email="marcosholgado@gmail.com" url="http://marcosholgado.com">Marcos Holgado</vendor>

    <description><![CDATA[
    This is a demo plugin built for Droidcon London 18.<br>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <depends>org.jetbrains.android</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>Git4Idea</depends>

    <application-components>
        <component>
            <implementation-class>com.marcosholgado.droidcon18.plugin.components.DroidconComponent</implementation-class>
        </component>
    </application-components>

    <extensions defaultExtensionNs="com.android">
        <!-- Add Droidcon module to the New Module wizard -->
        <moduleDescriptionProvider implementation="com.marcosholgado.droidcon18.plugin.actions.newModule.DroidconModuleProvider"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <!--Add liveTemplates-->
        <defaultLiveTemplatesProvider implementation="com.marcosholgado.droidcon18.plugin.liveTemplates.DroidconLiveTemplateProvider"/>
    </extensions>

    <project-components>
        <!-- Add your project components here -->
        <component>
            <implementation-class>
                com.marcosholgado.droidcon18.plugin.components.JiraComponent
            </implementation-class>
            <loadForDefaultProject/>
        </component>
    </project-components>

    <extensions defaultExtensionNs="com.intellij">
        <defaultProjectTypeProvider type="Android"/>
        <projectConfigurable
                instance="com.marcosholgado.droidcon18.plugin.configuration.JiraSettings">
        </projectConfigurable>
    </extensions>

    <actions>
        <group id="Droidcon.TopMenu"
               text="_Droidcon"
               description="Droidcon Toolbar Menu">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="CopyTemplates"
                    class="com.marcosholgado.droidcon18.plugin.actions.copyTemplates.CopyTemplatesAction"
                    text="_Copy Templates"
                    description="Copy Android Templates"/>
        </group>

        <group id="DroidconMenu" text="_Droidcon" description="Droidcon" popup="true">
            <group id="DroidconInsideMenu" text="_Droidcon" description="Droidcon">
                <action id="JiraMoveTicket"
                        class="com.marcosholgado.droidcon18.plugin.actions.jiraMove.JiraMoveAction"
                        text="Move Ticket"
                        description="Move Ticket in Jira">
                    <keyboard-shortcut first-keystroke="control alt k" keymap="$default"/>
                </action>
                <action id="JiraNewTicket"
                        class="com.marcosholgado.droidcon18.plugin.actions.jiraNewTicket.JiraNewTicketAction"
                        text="New Ticket"
                        description="New Ticket in Jira">
                    <keyboard-shortcut first-keystroke="control alt p" keymap="$default"/>
                </action>
            </group>
            <add-to-group group-id="ProjectViewPopupMenu" relative-to-action="RefactoringMenu" anchor="before"/>
        </group>
    </actions>
</idea-plugin>